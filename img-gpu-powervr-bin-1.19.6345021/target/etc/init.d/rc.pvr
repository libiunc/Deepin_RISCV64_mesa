		echo "Cannot set parameters for drm_starfive. Module already loaded."
		some_modules_already_loaded=1
	elif ! /sbin/modprobe -q drm_starfive $PVR_DISPLAY_PARAMS; then
		echo "Module drm_starfive failed to load. Retrying."
		if [ -z $depmod_has_been_run ]; then
			if [ -e /sbin/depmod ]; then
				echo "Running /sbin/depmod"
				/sbin/depmod && depmod_has_been_run=1
			fi
		fi
		if ! /sbin/modprobe -q drm_starfive $PVR_DISPLAY_PARAMS; then echo "Continuing to load PowerVR services (drm_starfive failed to load)"; drm_starfive_failed=1; fi
	fi


